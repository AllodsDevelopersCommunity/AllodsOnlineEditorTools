            </pipe>
          </Item>
        </optional>
      </Item>

      <!--1-->
      <Item type="gameMechanics.world.behaviour.genericBrain.AIStateNodeSingle">
        <name>DeadState</name>
				<state type="gameMechanics.world.mob.behaviour.components.states.AIStateIdle"/>
